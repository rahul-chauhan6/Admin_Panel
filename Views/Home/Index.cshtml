
@model MVCCURD.Models.usermodel
@{ Layout = null; }

<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />
<link href="~/Content/css/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/css/dataTables/dataTables.responsive.css" rel="stylesheet" />
<link href="~/Content/css/timeline.css" rel="stylesheet" />
<link href="~/Content/css/startmin.css" rel="stylesheet" />
<link href="~/Content/css/morris.css" rel="stylesheet" />>
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Register Here</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6">

                        @using (@Html.BeginForm("Index", "Home", FormMethod.Post))
                        {
            @Html.HiddenFor(m => m.id)



                            <div class="from-group">
                                <label>ID</label>
                                @Html.TextBoxFor(m => m.id, new { @class = "form-control", @required = "required" })

                            </div>


                                            <div class="from-group">
                                                <label>Name</label>
                                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })

                                            </div>


                                                            <div class="from-group">
                                                                <label>Email</label>
                                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })

                                                            </div>


                                                                            <label>Password</label>
                                                                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @required = "required" })


                                                                                                            <button type="submit" class="btn btn-success">submit</button>}

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
        </div>
    </div>
</div>